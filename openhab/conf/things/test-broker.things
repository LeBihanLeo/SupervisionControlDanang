Bridge mqtt:broker:mosquitto [ host="mqtt", port=8883,  secure=false, username="admin", password="admin123" ] {
    Thing topic topic_test "Topic Test 123" (mqtt:broker:mosquitto) {
        Channels:
			Type number : test1 "windmill 1" [ stateTopic="sp1/prod" ]
			Type number : test2 "solar panel 1" [ stateTopic="wm2/prod" ]
			Type number : test3 "windmill 2" [ stateTopic="sp3/prod" ]
			Type number : test4 "solar panel 2" [ stateTopic="wm4/prod" ]
			Type number : test5 "windmill 3" [ stateTopic="sp5/prod" ]
			Type number : test6 "solar panel 3" [ stateTopic="wm6/prod" ]
			Type number : test7 "windmill 4" [ stateTopic="sp7/prod" ]
			Type number : test8 "solar panel 4" [ stateTopic="wm8/prod" ]
			Type number : test9 "windmill 5" [ stateTopic="sp9/prod" ]
			Type number : test10 "solar panel 5" [ stateTopic="wm10/prod" ]
    }
    
    Thing topic topic_json_test "Topic JSON test" (mqtt:broker:mosquitto) {
        Channels:
            Type number : sp_l1_1_power_channel "solar panel 1 power channel" [ stateTopic="l1/sp1", transformationPattern="JSONPATH:$.power" ]
            Type string : sp_l1_1_location_channel "solar panel 1 location channel" [ stateTopic="l1/sp1", transformationPattern="JSONPATH:$.location" ]
            Type number : sp_l1_1_timestamp_channel "solar panel 1 timestamp channel" [ stateTopic="l1/sp1", transformationPattern="JSONPATH:$.timestamp" ]

            Type number : sp_l1_2_power_channel "solar panel 2 power channel" [ stateTopic="l1/sp2", transformationPattern="JSONPATH:$.power" ]
            Type string : sp_l1_2_location_channel "solar panel 2 location channel" [ stateTopic="l1/sp2", transformationPattern="JSONPATH:$.location" ]
            Type number : sp_l1_2_timestamp_channel "solar panel 2 timestamp channel" [ stateTopic="l1/sp2", transformationPattern="JSONPATH:$.timestamp" ]
    }
}